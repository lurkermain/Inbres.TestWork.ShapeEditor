<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ShapesEditor.App.MainWindow"
        Width="900" Height="650" Title="Shapes Editor">
	<DockPanel LastChildFill="True">
		<Border DockPanel.Dock="Top" Background="#333" Padding="8" BorderBrush="#CCC" BorderThickness="0,0,0,1">
			<StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
				<ComboBox x:Name="ToolSelector" Width="220" SelectedIndex="0">
					<ComboBox.Items>
						<x:String>Прямоугольник</x:String>
						<x:String>Кубическая кривая Безье</x:String>
					</ComboBox.Items>
				</ComboBox>

				<Button x:Name="FinishCurveButton" Content="Finish Curve" Width="120"/>
				<Button x:Name="SaveButton" Content="Save JSON" Width="100"/>
				<Button x:Name="LoadButton" Content="Load JSON" Width="100"/>
				<Button x:Name="ClearButton" Content="Clear" Width="80"/>
			</StackPanel>
		</Border>

		<Canvas x:Name="DrawingCanvas" Background="White"/>
	</DockPanel>
</Window>
